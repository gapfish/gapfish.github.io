{
  "$schema" : "http://json-schema.org/draft-04/schema#" ,
  "type" : "object" ,
  "properties" : {
    "installations": { "$ref" : "#/definitions/installation" }
  } , 
  "required" : [ "installations" ] ,

  "definitions" : {
    "installation" : {
      "description" : "An app installation" ,
      "type" : "object" ,
      "oneOf" : [
      {
        "properties" : {
          "id" : {
            "type" : "string"
          } ,
          "deviceType" : {
            "type" : "string" ,
            "enum" : [ "ios" ]
          } ,
          "iosDeviceToken" : {
            "type" : "string"
          },
          "mobileCarrier" : {
            "type" : "string"
          }
        } ,
        "required" : [ "id", "deviceType", "iosDeviceToken" ]
      } ,
      {
        "properties" : {
          "id" : {
            "type" : "string"
          } ,
          "deviceType" : {
            "type" : "string" ,
            "enum" : [ "android" ]
          } ,
          "androidRegistrationId" : {
            "type" : "string"
          },
          "mobileCarrier" : {
            "type" : "string"
          }
        } ,
        "required" : [ "id", "deviceType", "androidRegistrationId" ]
      } ]
    }
  }
}
