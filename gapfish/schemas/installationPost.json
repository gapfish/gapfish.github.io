{
  "$schema" : "http://json-schema.org/draft-04/schema#" ,
  "type": "object" ,
  "properties" : {
    "installations" : { "$ref" : "#/definitions/installation" }
  } ,

  "definitions": {
    "installation": {
      "description": "An app installation" ,
      "type": "object" ,
      "oneOf": [
      {
        "properties": {
          "deviceType" : {
            "type" : "string" ,
            "enum": [ "ios" ]
          } ,
          "iosDeviceToken" : {
            "type" : "string"
          },
          "mobileCarrier" : {
            "type" : "string"
          }
        } ,
        "required": [ "deviceType", "iosDeviceToken" ]
      } ,
      {
        "properties": {
          "deviceType" : {
            "type" : "string" ,
            "enum": [ "android" ]
          } ,
          "androidRegistrationId" : {
            "type" : "string"
          },
          "mobileCarrier" : {
            "type" : "string"
          }
        } ,
        "required": [ "deviceType", "androidRegistrationId" ]
      } ]
    }
  }
}
